# Backend Environment Configuration
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# CORS Configuration (optional)
# Default: '*' (allows all origins in development)
# For production, specify allowed origins: https://app.example.com,https://www.example.com
# CORS_ORIGIN=*

# JWT Authentication
JWT_SECRET=your-secret-key-here-change-in-production

# Google OAuth
# Get this from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com

# Database Configuration
# Set USE_DATABASE=true to enable PostgreSQL, false for in-memory storage
USE_DATABASE=false

# PostgreSQL Configuration (when USE_DATABASE=true)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=lazy_map

# Database Options
DB_SYNCHRONIZE=true   # Auto-sync schema in development (set false in production)
DB_LOGGING=false      # Enable query logging for debugging
DB_SSL=false          # Enable SSL for production databases

# Connection Pool
DB_POOL_MAX=10
DB_POOL_MIN=2
DB_IDLE_TIMEOUT=10000

