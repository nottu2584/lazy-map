# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=lazy_map

# Database Options
DB_SYNCHRONIZE=false  # Set to true in development to auto-sync schema
DB_LOGGING=false      # Set to true to enable query logging
DB_SSL=false          # Set to true for production with SSL

# Connection Pool
DB_POOL_MAX=10
DB_POOL_MIN=2
DB_IDLE_TIMEOUT=10000

# Redis Cache (optional, for future use)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Application
NODE_ENV=development
PORT=3000

# JWT Secret (for authentication)
JWT_SECRET=your-secret-key-here
JWT_EXPIRATION=7d

# Map Generation Limits
FREE_TIER_MAP_LIMIT=10
PRO_TIER_MAP_LIMIT=100
ENTERPRISE_TIER_MAP_LIMIT=1000

# Map Generation Settings
DEFAULT_MAP_CELL_SIZE=32
MAX_MAP_WIDTH=200
MAX_MAP_HEIGHT=200