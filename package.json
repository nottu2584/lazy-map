{
  "name": "lazy-map",
  "version": "1.0.0",
  "description": "A graphical map generator with grid-based battlemaps",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:backend": "pnpm --filter backend start:dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "turbo format",
    "setup": "pnpm install && turbo build --filter='@lazy-map/*'"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "oxlint": "^1.9.0",
    "prettier": "^3.5.3",
    "turbo": "^2.5.5",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@10.12.1"
}
