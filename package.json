{
  "name": "lazy-map",
  "version": "1.0.0",
  "description": "A graphical map generator with grid-based battlemaps",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:backend": "pnpm --filter backend start:dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "turbo format",
    "setup": "pnpm install && turbo build --filter='@lazy-map/*'",
    "generate": "pnpm --filter @lazy-map/api-contracts generate",
    "generate:watch": "nodemon --watch apps/backend/openapi.json --exec 'pnpm generate'",
    "prepare": "node -e \"if (process.env.CI !== 'true') { require('child_process').execSync('husky', { stdio: 'inherit' }) }\""
  },
  "engines": {
    "node": ">=20.11.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "oxlint": "^1.9.0",
    "prettier": "^3.5.3",
    "turbo": "^2.5.5",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@10.12.1"
}
